<h1>home</h1>

<% if (files.length > 0) { %>

<h2>Uploaded Files:</h2>
<ul>
  <% files.forEach(file => { %>
  <li><%= file %></li>
  <form action="/delete/<%=file%>" method="post">
    <button type="submit">
      <li>delete</li>
    </button>
  </form>
  <form action="/display/<%=file%>" method="post">
    <button type="submit">
      <li>view</li>
    </button>
  </form>
  <% }); %>
</ul>
<% } else { %>
<p>No files uploaded yet.</p>
<% } %>
