<%-include("_upload")%> <% if (files.length > 0) { %>

<!-- <h2>Uploaded Files:</h2> -->
<div
  style="
    border: 2px solid black;
    width: 500px;
    display: flex;
    flex-direction: row;
    height: 300px;
    flex-wrap: wrap;
    flex-grow: 1;
    align-items: center;
    justify-content: space-around;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
  "
>
  <!-- <ul> -->
  <% files.forEach(file => { %>
  <div style="display: flex; flex-direction: row">
    <li style="list-style: none"><%= file %></li>
    <form action="/delete/<%=file%>" method="post">
      <button type="submit">
        <li>delete</li>
      </button>
    </form>
    <form action="/display/<%=file%>" method="post">
      <button type="submit">
        <li>view</li>
      </button>
    </form>
  </div>
  <% }); %>
  <!-- </ul> -->
</div>
<% } else { %>
<p>No files uploaded yet.</p>
<% } %>
